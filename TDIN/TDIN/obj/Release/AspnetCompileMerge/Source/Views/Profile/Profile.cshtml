
@{
    ViewBag.Title = "Profile";
}

<div class='card col-md-5'>
    <div class='profile-sidebar'>

        <div class='profile-usertitle'>
            <div class='profile-usertitle-name'>Name</div>
            <div class='profile-usertitle-email'>Email</div>
        </div>

    </div>

    <div class='profile-userbuttons'>
        <a id="edit" class='btn btn-success btn-sm'>Edit Profile</a>
        <a id="my" class='btn btn-primary btn-sm'>My Trouble Tickets</a>
        <a id="new" class='btn btn-info btn-sm'>New Trouble Ticket</a>
    </div>
</div>

<div id="editProfile" class='card col-md-9'>
    <h3>Edit Profile</h3>
    <br>
    <form id="profileForm" class="form-horizontal" role="form">
        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input id="login-username" type="text" class="form-control" name="name" value="" placeholder="Name">
        </div>

        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope" r></i></span>
            <input id="login-email" type="text" class="form-control" name="email" value="" placeholder="Email">
        </div>

        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input id="login-password" type="password" class="form-control" name="password" placeholder="Password">
        </div>

        <button id="editForm" class='btn btn-success btn-sm'>EDIT</button>
    </form>
</div>
<div id="myTickets" class='card col-md-9'>
    <h3>My Trouble Tickets</h3>
    <br>
    <div class='profile-userbuttons'>
        <a id="openTicket" class='btn btn-danger btn-sm'>Open</a>
        <a id="closeTicket" class='btn btn-warning btn-sm'>Close</a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr class="success">
                    <td>1</td>
                    <td><a href="ticket.html">Missing things</a></td>
                    <td>OI OI OI</td>
                    <td>30/04/2018</td>
                    <td>Closed</td>
                </tr>
                <tr class="danger">
                    <td>1</td>
                    <td>Missing things</td>
                    <td>OI OI OI</td>
                    <td>30/04/2018</td>
                    <td>Open</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div id="newTickets" class='card col-md-9'>
    <h3>New Trouble ticket</h3>
    <br>
    <form id="ticketForm" class="form-horizontal" role="form">
        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
            <input type="text" class="form-control" name="title" value="" placeholder="Title">
        </div>

        <div style="margin-bottom: 25px" class="input-group">
            <textarea type="text" class="form-control" name="description" rows="10" value="" placeholder="Description"></textarea>
        </div>

        <button id="createTicket" class='btn btn-success btn-sm'>CREATE</button>
    </form>
</div>

<script src="~/Content/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Plugin JavaScript -->
<script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<script src="~/Content/js/profile.js"></script>

